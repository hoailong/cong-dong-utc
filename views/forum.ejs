    <div class="row">
        <% topics.forEach(topic => { %>
            <div class="col-12 col-md-6 col-xl-4 mt-3">
                <a href="/forum/<%= topic.topic_code %>.<%= topic.id_topic %>">
                    <div class="card card-category <%= topic.bg_color %>">
                        <!-- <div class="section-mask mask"></div> -->
                        <div class="card-header text-center">
                            <h2 class="card-text text-white"><%= topic.topic_name %></h2>
                            <p><%= topic.description %></p>
                        </div>
                        <div class="card-body">
                            <p><i class="fa fa-file-text-o"></i> Tổng số bài viết: 30</p>
