<div class="modal fade" id="faculty_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-card card" data-toggle="lists" data-lists-values='["name"]'>
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">

                            <!-- Title -->
                            <h4 class="card-header-title" id="exampleModalCenterTitle">
                                Thêm / Sửa khoa
                            </h4>

                        </div>
                        <div class="col-auto">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>

                        </div>
                    </div> <!-- / .row -->
                </div>
                <div class="card-body">
                    <input type="hidden" id="id_faculty" >
                    <div class="form-group">
                        <label for="id_faculty">Mã khoa:</label>
                        <input class="form-control" id="faculty_code" placeholder="Mã khoa" >
                    </div>
                    <div class="form-group">
                        <label for="faculty_name">Tên khoa:</label>
                        <input class="form-control" id="faculty_name" placeholder="Tên khoa" >
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>