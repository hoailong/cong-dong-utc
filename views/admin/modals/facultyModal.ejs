<div class="modal" id="faculty_modal" tabIndex={-1} role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm / Sửa khoa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="id_faculty">Mã khoa:</label>
                    <input class="form-control" id="id_faculty" placeholder="Mã khoa" >
                </div>
                <div class="form-group">
                    <label for="faculty_name">Tên khoa:</label>
                    <input class="form-control" id="faculty_name" placeholder="Tên khoa" >
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn-save">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>