<!--                            <b><i class="fa fa-bolt"></i> Chào mừng thành viên mới nhất: </b>-->
<!--                            <a href="#"> Hoài Long</a>-->
<!--                        </li>-->
<!--                    </ul>-->
                </div>
            </div>
        </div>
        <div class="sidebar col-lg-4">
            <div class="sidebar-box">
                <h3 class="border-bottom"> Bài viết mới nhất</h3>
                <ul class="top-post px-3 py-1">
                    <% topNew.forEach(post => { %>
                            <li class="top-post-item">
                                <div class="top-picture">
                                    <a href="/forum/p/<%= post.code %>.<%= post.id_post %>">
                                        <div class="bg-image top-picture-item" style="background-image: url(<%= post.src ? `https://lh3.google.com/u/5/d/${post.src}=w100` : 'http://localhost:6900/img/profile/1004317903236309.jpg'%>)"></div>
                                    </a>
                                </div>
                                <div>
                                    <div>
                                        <a href="/forum/p/<%= post.code %>.<%= post.id_post %>"><%= post.title %></a>
                                    </div>
                                    <div class="text-muted">
                                        <a href="/u/<%= post.created_by %>" class="top-post-author"><%=post.user_name%></a> <span style="color: #e8e8e8;">●</span> <%= moment.duration( (new Date()).getTime() - moment(post.created_time).toDate().getTime(), 'milliseconds')._data.hours >= 1 ? moment(post.created_time).calendar() : moment(post.created_time).fromNow() %>
                                    </div>
                                </div>
                            </li>
                        <% }) %>
                </ul>
            </div>
            <div class="sidebar-box">
                <h3 class="border-bottom"> Thành viên tích cực</h3>
                <ul class="top-member px-3 py-1">
                    <% for(let i = 0; i < 5; i++){ %>
                        <li class="border-bottom py-1">
                            <div class="top-member-info">
                                <div class="author-img mr-2">
                                    <a href="#">
<!--                                        <img src="/img/profile/1004317903236309.jpg" class="rounded-circle" alt="UTC Community" width="40px">-->
                                        <div class="bg-image top-member-picture lazyload" style="background-image: url('/img/profile/1004317903236309.jpg')"></div>
                                    </a>
                                </div>
                                <div class="top-member-detail">
                                    <div class="d-flex"><a class="author-name" href="/u/">Hoài Long</a></div>
                                    <div>
                                        <span class="user-role"><i class="fa fa-shield"></i> ADMIN</span>
                                    </div>
                                </div>
                                <div class="text-muted" style="align-self: flex-end">
                                    63 bài đăng
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>
