<div class="container main-container animated fadeInRight">
    <div class="row">
        <div class="main-carousel">
            <div class="carousel-cell first" style="background-image: url(https://devmaster.edu.vn/uploads/images/devmaster-campaign/devmaster-tuyen-thuc-tap-sinh-chuyen-de-it.png)"></div>
            <div class="carousel-cell second" style="background-image: url(https://devmaster.edu.vn/uploads/images/devmaster-campaign/devmaster-lap-trinh-asp-net-mvc-5-webapi-angularjs.jpg)">
<!--                <img src="https://devmaster.edu.vn/uploads/images/devmaster-campaign/devmaster-lap-trinh-asp-net-mvc-5-webapi-angularjs.jpg" width="100%">-->
            </div>
            <div class="carousel-cell third" style="background-image: url(https://devmaster.edu.vn/uploads/images/devmaster-campaign/devmaster-lap-trinh-vien-website-php-va-mysql-chuyen-nghiep.png)"></div>
        </div>
    </div>
    <div class="row">
        <div class="category col-lg-8">
            <h6>CHỦ ĐỀ</h6>
            <div class="topics">
                <table class="topic-table">
                    <% topics.forEach(topic => { %>
                        <tr>
                            <td class="topic-icon">
                                <i class="<%= topic.icon %>" style="background-color: <%= topic.bg_colorr %>"></i>
                            </td>
                            <td class="topic-info">
                                <div class="topic-title">
                                    <a href="/forum/<%= topic.topic_code %>.<%= topic.id_topic %>">
                                        <%= topic.topic_name %>
                                    </a>
                                </div>
                                <div class="topic-description">
                                    <%= topic.description %>
                                </div>
                                <div class="mobile-show mt-1">
                                    <span><i class="fa fa-newspaper-o"></i> <%= topic.posts_count %> bài viết</span>
                                    <a href="/forum/p/<%= topic.code %>.<%= topic.id_post %>" title="<%= topic.title%>" style="float: right">
                                        <i class="fa fa-bolt"></i>
                                        <%= moment.duration( (new Date()).getTime() - moment(topic.created_time).toDate().getTime(), 'milliseconds')._data.hours >= 1 ?
                                                moment(topic.created_time).calendar() : moment(topic.created_time).fromNow() %>
                                    </a>
                                </div>
                            </td>
                            <td class="topic-post d-md-table-cell d-none">
                                <h4><%= topic.posts_count %></h4>
                                <small>Bài viết</small>
                            </td>
                            <td class="topic-recent d-md-table-cell d-none">
                                <div class="topic-recent-post" style="border-color: <%= topic.bg_colorr %>">
                                    <div class="head">
                                        <a href="#">
                                            <div class="bg-image picture lazyload" style="background-image: url('/img/profile/<%= topic.id_user%>.jpg')"></div>
                                        </a>
                                        <div class="about">
                                            <a class="author" href="/u/<%= topic.created_by %>"> <%= topic.user_name%></a>
                                            <a class="time" href="#"> <%= moment.duration( (new Date()).getTime() - moment(topic.created_time).toDate().getTime(), 'milliseconds')._data.hours >= 1 ? moment(topic.created_time).calendar() : moment(topic.created_time).fromNow() %></a>
                                        </div>
                                    </div>
                                    <a href="/forum/p/<%= topic.code %>.<%= topic.id_post %>" data-placement="top" title="<%= topic.title%>" style="color: #000"><%= topic.title%></a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </table>
                <hr/>
                <div class="forum-statistics">
                    <h6>THỐNG KÊ</h6>
                    <br/>
                    <div class="row forum-counter">
                        <div class="col-4">
                            <h3 class="counter"><span class="counter">169</span></h3>
                            <h4>Thành Viên</h4>
                            <i class="fa fa-users"></i>
                        </div>
                        <div class="col-4">
                            <h3 class="counter"><span class="counter">1,2K</span></h3>
                            <h4>Bài Viết</h4>
                            <i class="fa fa-newspaper-o"></i>
                        </div>
                        <div class="col-4">
                            <h3 class="counter"><span class="counter">12,6K</span></h3>
                            <h4>Lượt Xem</h4>
                            <i class="fa fa-desktop"></i>
                        </div>
                    </div>
<!--                    <ul>-->
<!--                        <li>-->
<!--                            <b><i class="fa fa-user-o"></i> Tổng số thành viên: </b> 169-->
<!--                        </li>-->
<!--                        <li>-->
